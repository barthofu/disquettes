<div >
    <h1>
        Inscription
    </h1>
    <form name="register" method="POST" action="">
        <table>
            <tr>
                <td>Disquette</td>
                <td><input type="text" name="disquette"></td>
            </tr>
            <tr>
                <td>Tags: </td>
                <td>
                    <select class="tag" multiple="multiple" name="tags" style="width: 100%;">
                <option selected="selected">sexe</option>
                <option >film</option>
                <option >manga</option>
              </select>
                </td>
            </tr>
            <tr>
                <td>A destination: </td>
                <td>
                    <select class="genre" name="genre" style="width: 100%;">
                <option value="0">Tout public</option>
                <option selected="selected" value="1">Pour une femme</option>
                <option value="2">Pour un homme</option>
              </select>
                </td>
            </tr>
            <tr>
                <td>Age: </td>
                <td>
                    <select class="age" name="age" style="width: 100%;">
                <option value="0">Tout public</option>
                <option selected="selected" value="1">18-25ans</option>
                <option value="2">16-35ans</option>
                <option value="3">36ans et +</option>
              </select>
                </td>
            </tr>
            <tr>
                <td>Langue: </td>
                <td>
                    <select class="lang" name="lang" style="width: 100%;">
                <option selected="selected" value="FR">Francais</option>
                <option value="EN">Anglais</option>
              </select>
                </td>
            </tr>
            
            <tr>
                <td>Autheur</td>
                <td><input type="text" name="author" placeholder="Laisser vide pour t'assigner en autheur!"></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Submit"></td>
            </tr>
        </table>
    </form>

</div>
<script>
    $(".tag").select2({
        tags: true,
        tokenSeparators: [',', ' ']
    })
    $(".lang").select2({
        minimumResultsForSearch: Infinity,
        selectOnClose: true
    })

    $(".age").select2({
        minimumResultsForSearch: Infinity,
        selectOnClose: true
    })
    $(".genre").select2({
        minimumResultsForSearch: Infinity,
        selectOnClose: true
    })
</script>